version: '3.9'

services:
  postgres:
    image: postgres:15
    container_name: autoescola_postgres
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: autoescola_sim
    ports:
      - "5432:5432"
    volumes:
      - postgres-data:/var/lib/postgresql/data

  pgadmin:
    image: dpage/pgadmin4
    container_name: autoescola_pgadmin
    restart: always
    environment:
      - PGADMIN_DEFAULT_EMAIL=admin@autoescola.dev
      - PGADMIN_DEFAULT_PASSWORD=admin
    ports:
      - "5050:80"
    volumes:
      - pgadmin-data:/var/lib/pgadmin
    depends_on:
      - postgres

volumes:
  postgres-data:
  pgadmin-data:

  api:
    container_name: autoescola_api
    build:
      context: .
      dockerfile: infra/api.Dockerfile
    restart: unless-stopped
    environment:
      NODE_ENV: development
      PORT: 3000
      DATABASE_URL: postgresql://postgres:postgres@autoescola_postgres:5432/autoescola?schema=public
    depends_on:
      autoescola_postgres:
        condition: service_healthy
    ports:
      - "3000:3000"
    working_dir: /app
    volumes:
      - .:/app
      - /app/node_modules
    command: >
      sh -lc "
        pnpm install &&
        pnpm prisma generate &&
        pnpm prisma migrate deploy &&
        pnpm start:dev
      "
    healthcheck:
      test: ["CMD", "wget", "-qO-", "http://localhost:3000/health"]
      interval: 10s
      timeout: 5s
      retries: 10
