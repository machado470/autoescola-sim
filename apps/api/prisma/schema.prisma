datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Instructor {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())

  lessons Lesson[]
}

model School {
  id        String    @id @default(uuid())
  name      String
  cnpj      String    @unique
  phone     String?
  address   String
  createdAt DateTime @default(now())

  students Student[]
  lessons  Lesson[]
}

model Student {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  birth     DateTime
  createdAt DateTime @default(now())

  schoolId String
  school   School   @relation(fields: [schoolId], references: [id])

  lessons Lesson[]
}

model Lesson {
  id          String   @id @default(uuid())
  date        DateTime @default(now())
  notes       String?

  instructorId String
  studentId    String
  schoolId     String

  instructor Instructor @relation(fields: [instructorId], references: [id])
  student    Student    @relation(fields: [studentId], references: [id])
  school     School     @relation(fields: [schoolId], references: [id])
}
