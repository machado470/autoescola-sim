generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ───────────────────────────────────────────
//  MODELO DE USUÁRIO (LOGIN / ADMIN)
// ───────────────────────────────────────────
//

model User {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String    @unique
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}

//
// ───────────────────────────────────────────
//  MODELOS DO AUTOESCOLA-SIM
// ───────────────────────────────────────────
//

model Aluno {
  id         Int              @id @default(autoincrement())
  nome       String
  email      String           @unique
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  simulados  Simulado[]
  progresso  ProgressoAluno[]
}

model Categoria {
  id         Int          @id @default(autoincrement())
  nome       String       @unique
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  fases      Fase[]
  perguntas  Pergunta[]
}

model Fase {
  id          Int              @id @default(autoincrement())
  titulo      String
  categoriaId Int
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  categoria   Categoria        @relation(fields: [categoriaId], references: [id])
  perguntas   Pergunta[]
  aulas       Aula[]
  progresso   ProgressoAluno[]

  @@unique([titulo, categoriaId])
}

model Pergunta {
  id            Int        @id @default(autoincrement())
  enunciado     String
  alternativaA  String
  alternativaB  String
  alternativaC  String
  alternativaD  String
  correta       String
  faseId        Int
  categoriaId   Int

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  fase        Fase       @relation(fields: [faseId], references: [id])
  categoria   Categoria  @relation(fields: [categoriaId], references: [id])
}

model Aula {
  id          Int        @id @default(autoincrement())
  faseId      Int
  titulo      String
  conteudo    String
  videoUrl    String?
  ordem       Int        @default(1)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  fase        Fase       @relation(fields: [faseId], references: [id])
  progresso   ProgressoAluno[]
}

model ProgressoAluno {
  id        Int       @id @default(autoincrement())
  alunoId   Int
  aulaId    Int
  faseId    Int
  concluido Boolean   @default(false)
  xp        Int       @default(0)
  updatedAt DateTime  @default(now())

  aluno     Aluno     @relation(fields: [alunoId], references: [id])
  aula      Aula      @relation(fields: [aulaId], references: [id])
  fase      Fase      @relation(fields: [faseId], references: [id])

  @@unique([alunoId, aulaId])
}

model Simulado {
  id            Int        @id @default(autoincrement())
  alunoId       Int
  totalQuestoes Int
  acertos       Int        @default(0)
  createdAt     DateTime   @default(now())

  aluno        Aluno      @relation(fields: [alunoId], references: [id])
}
